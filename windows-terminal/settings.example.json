{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{profile_id}",

    "copyOnSelect": true,
    "copyFormatting": false,
    "alwaysShowTabs": false,
    "showTabsInTitlebar": false,
    "multiLinePasteWarning": false,

    "profiles":
    {
        "defaults":
        {
            "fontFace": "Source Code Pro",
            "colorScheme": "Nord",
            "cursorShape": "filledBox"
        },
        "list": []
    },
    "schemes": [
        {
            "name": "Nord",
            "foreground": "#D8DEE9",
            "background": "#2E3440",
            "black": "#3B4252",
            "red": "#BF616A",
            "green": "#A3BE8C",
            "yellow": "#EBCB8B",
            "blue": "#81A1C1",
            "purple": "#B48EAD",
            "cyan": "#88C0D0",
            "white": "#E5E9F0",
            "brightBlack": "#4C566A",
            "brightRed": "#BF616A",
            "brightGreen": "#A3BE8C",
            "brightYellow": "#EBCB8B",
            "brightBlue": "#81A1C1",
            "brightPurple": "#B48EAD",
            "brightCyan": "#8FBCBB",
            "brightWhite": "#ECEFF4"
        }
    ],
    "keybindings":[
        { "command": "openSettings", "keys": "ctrl+shift+," },

        { "command": null, "keys": "ctrl+shift+p" },
        { "command": null, "keys": "ctrl+tab" },
        { "command": null, "keys": "ctrl+shift+tab" },
        { "command": null, "keys": "ctrl+," },
        { "command": null, "keys": "f11" },
        { "command": null, "keys": "alt+enter" },
        { "command": null, "keys": "ctrl+shift+v" }
    ]
}

